[Unit]
Description=GoRTC Web service
After=network-online.target
Wants=network-online.target

[Service]

WorkingDirectory=/home/web/go/src/github.com/gortc/web
ExecStart=/home/web/go/src/github.com/gortc/web/gortc-web
Restart=on-failure
Type=simple
User=web
Group=web
LimitNOFILE=65536
RestartSec=3
MemoryAccounting=true
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
